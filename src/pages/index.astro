<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Redirecting...</title>
    <script>
      // Idiomas soportados
      const supportedLocales = ['en', 'es', 'fr'];

      // Detectar idioma del navegador
      const browserLang = navigator.language.slice(0, 2).toLowerCase();

      // Si est√° soportado, redirigir a ese idioma, si no, usar 'en'
      const targetLang = supportedLocales.includes(browserLang) ? browserLang : 'en';

      window.location.replace(`/${targetLang}/`);
    </script>
  </head>
  <body>
    <p>Detectando idioma y redirigiendo...</p>
  </body>
</html>