<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Redirecting...</title>
    <script>
      const supportedLocales = ['en', 'es', 'fr'];
      const browserLang = navigator.language.slice(0, 2).toLowerCase();
      const targetLang = supportedLocales.includes(browserLang) ? browserLang : 'en';
      window.location.replace(`/${targetLang}`);
    </script>
  </head>
  <body>
    <p>Detecting language and redirecting...</p>
  </body>
</html>